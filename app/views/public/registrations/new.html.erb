<div class="container">
  <h4 class="mb-5"><span class="bg-light px-3 pb-1">新規会員登録</span></h4>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <div class="row">
      <div class="mx-auto">
        <table>
          <tr>
            <td><%= f.label :名前 %></td>
            <td style="padding-bottom: 10px;">（姓）</td>
            <td style="padding-bottom: 10px;"><%= f.text_field :last_name, autofocus: true, placeholder: "令和", :size=>"25" %></td>
            <td style="padding-bottom: 10px;">（名）</td>
            <td style="padding-bottom: 10px;"><%= f.text_field :first_name, autofocus: true, placeholder: "道子", :size=>"25" %></td>
          </tr>
          <tr>
            <td><%= f.label :フリガナ %></td>
            <td style="padding-bottom: 10px;">（セイ）</td>
            <td style="padding-bottom: 10px;"><%= f.text_field :last_name_kana, autofocus: true, placeholder: "レイワ", :size=>"25" %></td>
            <td style="padding-bottom: 10px;">（メイ）</td>
            <td style="padding-bottom: 10px;"><%= f.text_field :first_name_kana, autofocus: true, placeholder: "ミチコ", :size=>"25" %></td>
          </tr>
          <tr>
            <td><%= f.label :メールアドレス %></td>
            <td></td>
            <td style="padding-bottom: 10px;"><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", :size=>"25" %></td>
          </tr>
          <tr>
            <td><%= f.label :郵便番号（ハイフンなし） %></td>
            <td></td>
            <td style="padding-bottom: 10px;"><%= f.text_field :postal_code, autofocus: true, placeholder: "0000000", :size=>"25" %></td>
          </tr>
          <tr>
            <td><%= f.label :住所 %></td>
            <td></td>
            <td style="padding-bottom: 10px;" colspan="3"><%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0", :size=>"60" %></td>
          </tr>
          <tr>
            <td><%= f.label :電話番号（ハイフンなし） %></td>
            <td></td>
            <td style="padding-bottom: 10px;"><%= f.text_field :phone_number, autofocus: true, placeholder: "0000000000", :size=>"25" %></td>
          </tr>
          <tr>
            <td><%= f.label :パスワード（６文字以上） %></td>
            <td></td>
            <td style="padding-bottom: 10px;"><%= f.password_field :password, autocomplete: "new-password", :size=>"25" %></td>
          </tr>
          <tr>
            <td><%= f.label :パスワード確認用 %></td>
            <td></td>
            <td style="padding-bottom: 10px;"><%= f.password_field :password_confirmation, autocomplete: "new-password", :size=>"25" %></td>
          </tr>
          <tr>
            <td></td>
            <td></td>
            <td style="padding-top: 20px;"><%= f.submit "新規登録", class: 'btn btn-success' %></td>
          </tr>
        </table>
      </div>
    </div>
  <% end %>
  <h4 class="mt-5"><span class="bg-light px-3 pb-1">既に登録済みの方</span></h4>
  <div class="text-center">
    <%= render "public/shared/links" %>
  </div>
</div>