<div class="container">
<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

　<div class="field">
    <%= f.label :名前（姓） %>
    <%= f.text_field :last_name, autofocus: true, placeholder: "令和" %>
  </div>

  <div class="field">
    <%= f.label :（名） %>
    <%= f.text_field :first_name, autofocus: true, placeholder: "道子" %>
  </div>

  <div class="field">
    <%= f.label :フリガナ（セイ） %>
    <%= f.text_field :last_name_kana, autofocus: true, placeholder: "レイワ" %>
  </div>

  <div class="field">
    <%= f.label :（メイ） %>
    <%= f.text_field :first_name_kana, autofocus: true, placeholder: "ミチコ" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
  </div>

  <div class="field">
    <%= f.label :郵便番号（ハイフンなし） %>
    <%= f.text_field :postal_code, autofocus: true, placeholder: "0000000" %>
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0" %>
  </div>

  <div class="field">
    <%= f.label :電話番号（ハイフンなし） %>
    <%= f.text_field :phone_number, autofocus: true, placeholder: "0000000000" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（６文字以上） %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード確認用 %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録",class: 'btn btn-primary' %>
  </div>
<% end %>

  <p>既に登録済みの方</p>

<%= render "public/shared/links" %>

</div>