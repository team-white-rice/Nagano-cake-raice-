<div class="container">

  <h2><strong>注文情報確認</strong></h2>

  <table class="table">
      <tr>
        <td>商品名</td>
        <td>単価</td>
        <td>数量</td>
        <td>小計</td>
      </tr>

      <% @sum = 0 %>

      <% @cart_items.each do |cart_item| %>

      <tr>
        <td>
          <%= image_tag(cart_item.menu.menu_image, size: "60x50", format: 'jpeg') %>
          <%= cart_item.menu.name %>
        </td>

        <td>
          <%= cart_item.menu.price %>
        </td>

        <td>
          <%= cart_item.item_quantity %>
        </td>

        <% @sum += cart_item.menu.price %>
        <td>
          <%= @sum %>
        </td>
      </tr>
      <% end %>
  </table>


  <table class="table">

    <tr>
      <td>送料</td>
      <td>800</td>
    </tr>

    <tr>
      <td>商品合計</td>
      <td><%= @sum %></td>
    </tr>

    <tr>
      <td>請求金額</td>
      <td><%= @sum + 800 %></td>
    </tr>

  </table>

  <table class="table">
    <tr>
      <th>支払方法</th>
      <td><%= @order.payment_method_i18n %></td>
    </tr>

    <tr>
      <th>お届け先</th>
      <td>
        <%= @order.ship_to_address %>
        <%= @order.ship_name %>
      </td>
    </tr>
  </table>


<%= form_with model: @order, url: "/orders", local:true  do |f| %>
  <%= f.hidden_field :customer_id, value: current_customer.id %>
  <%= f.hidden_field :payment_method, value: @order.payment_method %>
  <%= f.hidden_field :freight, value: 800 %>
  <%= f.hidden_field :postcode, value: @order.postcode %>
  <%= f.hidden_field :total_price, value: @sum + 800 %>
  <%= f.hidden_field :ship_to_address, value: @order.ship_to_address %>
  <%= f.hidden_field :ship_name, value:@order.ship_name %>
  <%= f.hidden_field :status, value: "wait_payment" %>
  <%= f.submit "注文を確定する" %>
<% end %>

</div>