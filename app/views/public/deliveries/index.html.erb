<h1>配送先登録/一覧</h1>

<%= form_with model: @delivery_new do |f| %>
  <h4>郵便番号（ハイフンなし）</h4>
  <%= f.text_field :post_address %>

  <h4>住所</h4>
  <%= f.text_area :address, class: 'form-control',size: "20x1" %>

  <h4>名前</h4>
  <%= f.text_field :name %>

  <%= f.submit '新規登録' %>
<% end %>


<% @deliveries.each do |delivery| %>
<div>
  <p><%= delivery.post_address %></p>
  <p><%= delivery.address %></p>
  <p><%= delivery.name %></p>
  <%= link_to '編集する', edit_delivery_path(delivery) %>
  <%= button_to '削除する', delivery_path(delivery.id), :method=> :delete %>
</div>
<% end %>