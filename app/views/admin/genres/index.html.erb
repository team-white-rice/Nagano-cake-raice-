<div class="container">
  <h1>ジャンル一覧・追加</h1>
  <%= form_with model: @genre do |f| %>
    <p>
      ジャンル名
      <%= f.text_field :name, placeholder: "ジャンル名" %>
      <%= f.submit '新規登録',class: 'btn btn-success' %>
    </p>
  <% end %>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
      </tr>
    <% end %>
  </tbody>
</div>