<h1>注文履歴詳細</h1>
<%= form_with model: @order, url: admin_order_path, method: :patch, local: true do |f| %>
<table>
 <tr>
  <th>購入者</th>
  <td>
   <%= link_to admin_customer_path do %>
    <%= @order.customer.last_name + @order.customer.first_name %>
   <% end %>
  </td>
 </tr>
 <tr>
  <th>注文日</th>
  <td><%= @order.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
 </tr>
 <tr>
  <th>配送先</th>
  <td>
   〒<%= @order.postcode %> <%= @order.ship_to_address %> <%= @order.ship_name %>
    </td>
 </tr>
 <tr>
  <th>支払方法</th>
  <td><%= @order.payment_method %></td>
 </tr>
 <tr>
  <th>注文ステータス</th>
  <td><%= f.label :order_status, "注文ステータス" %></td>
 </tr>
 <tr>
  <td>
   <% if @order.発送準備中? || @order.発送済み?  %>
    <%= f.select :order_status, Order.order_statuses.keys, class: "order_status" %>
   <% else %>
    <%= f.select :order_status,Order.order_statuses.keys, {disabled: ["発送準備中","発送済み"]} %>
   <% end %>
   <%= f.submit "更新" , class: "btn btn-outline-success" %>
  </td>
 </tr>
</table>
<% end %>
<table>
 <thead>
  <tr>
   <th>商品名</th>
   <th>単価(税込)</th>
   <th>数量</th>
   <th>小計</th>
   <th>製作ステータス</th>
  </tr>
 </thead>
 <tbody>
  <% @order.order_details.each do |order_detail| %>
   <tr>
    <td><%= order_detail.item.name %></td>
    <td><%= order_detail.item_price %></td>
    <td>
     <%= order_detail.quantity %>
    </td>
    <td><%= order_detail.item_price * order_detail.quantity %>円</td>
    <td>
     <%= form_with model: order_detail, url: admin_order_detail_path, method: :patch, local: true do |f| %>
      <%= f.hidden_field :order_detail_id, :value => order_detail.id %>
      <%= f.select :production_status, OrderDetail.production_statuses.keys %>
      <%= f.submit "更新", class: "btn btn-success" %>
     <% end %>
    </td>
   </tr>
  <% end %>
 </tbody>
</table>
<table>
 <tr>
  <th>商品合計</th>
  <td>
   <% @total_price = item_price(@order.total_price) %>
   <%= @total_price %>円
  </td>
 </tr>
 <tr><th>送料</th><td><%= @order.freight %>円</td></tr>
 <tr>
  <th>請求金額合計</th>
  <td>
   <% @total_payment_add_shipping_fee = @total_price + @order.shipping_fee %>
   <%= @total_payment_add_shipping_fee %> 円
  </td>
 </tr>
</table>

