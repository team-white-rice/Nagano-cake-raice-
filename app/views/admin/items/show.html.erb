<div class="container">
  <h4>商品詳細</h4>
  <div class="row">
    <div class="col-4">
      <%= image_tag @menu.menu_image, size: "300x300" %>
    </div>
    <div class="col-8">
      <p>商品名  <%= @menu.name %></p>
      <p>商品説明  <%= @menu.description %></p>
      <p>ジャンル  <%= @menu.genre.name %></p>
      <p>税込価格（税抜価格）  <%= number_with_delimiter((@menu.price * 1.1).round, delimiter: ',') %>  (<%= number_with_delimiter(@menu.price, delimiter: ',') %>)円</p>
      <p>
        販売ステータス
        <% if @menu.sale_status == true %>
          <%= content_tag :span, '販売中', class: 'text-success' %>
        <% else %>
          <%= '販売停止中' %>
        <% end %>
      </p>
      <%= link_to "編集する", edit_admin_item_path, class: 'btn btn-success' %>
    </div>
  </div>
</div>