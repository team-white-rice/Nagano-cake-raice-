<div class="container">
  <h4>商品編集</h4>
  <%= form_with model: [:admin, @menu], url: admin_item_path(@menu.id) do |f| %>
    <p>画像画像
      <%= f.file_field :menu_image, accept: "image/*" %>
    </p>
    <p>商品名
      <%= f.text_field :name %>
    </p>
    <p>商品説明
      <%= f.text_area :description %>
    </p>
    <p>ジャンル
      <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: 'ジャンルを選択してください' %>
    </p>
    <p>税抜価格
      <%= f.text_field :price %>円
    </p>
    <p>
      販売ステータス
      販売中
      <%= f.radio_button :sale_status, true, checked: true %>
      販売停止中
      <%= f.radio_button :sale_status, false %>
    </p>
    <%= f.submit '変更を保存',class: 'btn btn-success' %>
  <% end %>
</div>