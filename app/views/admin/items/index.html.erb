<div class="container">
  <h4>商品一覧</h4>
  <%= link_to "新しい商品を追加する", new_admin_item_path, class: 'btn btn-success' %>
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">商品ID</th>
        <th scope="col">商品名</th>
        <th scope="col">税抜価格</th>
        <th scope="col">ジャンル</th>
        <th scope="col">ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @menus.each do |menu| %>
      <tr>
        <td><%= menu.id %></td>
        <td>
          <u><%= link_to menu.name, admin_item_path(menu.id), class: 'text-body underline' %></u>
        </td>
        <td>¥<%= number_with_delimiter(menu.price, delimiter: ',') %></td>
        <td><%= menu.genre.name %></td>
        <td>
          <% if menu.sale_status == true %>
            <%= content_tag :span, '販売中', class: 'text-success' %>
          <% else %>
            <%= '販売停止中' %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>