<h1>注文履歴一覧</h1>
<p>購入日時</p>
<p>購入者</p>
<p>注文個数</p>
<p>注文ステータス</p>
<% @orders.each do |order| %>
 <%= link_to admin_order_path(order) do %>
  <%= order.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
 <% end %>
 <%= order.customer.last_name+order.customer.first_name %>
 <% @total_quantity = 0 %>
 <% order.order_details.each do |order_detail| %>
  <% @total_quantity += order_detail.quantity %>
 <% end %>
 <%= @total_quantity %>
 <td><%= Order.statuses_i18n[:wait_payment] %></td>
<% end %>
<table>
 <thead>
  <tr>
   <th>購入日時</th>
   <th>購入者</th>
   <th>注文個数</th>
   <th>注文ステータス</th>
  </tr>
 </thead>
<tbody>
<% @orders.each do |order| %>
 <tr>
  <td>
   <%= link_to admin_order_path(order) do %>
    <%= order.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
   <% end %>
  </td>
  <td>
   <%= order.customer.last_name+order.customer.first_name %>
  </td>
  <td>
   <% @total_quantity = 0 %>
   <% order.order_details.each do |order_detail| %>
    <% @total_quantity += order_detail.quantity %>
   <% end %>
   <%= @total_quantity %>
  </td>
  <td><%= Order.statuses_i18n[:wait_payment] %></td>
 </tr>
<% end %>
</tbody>
</table>

 <%= paginate @order %>
 