<div class="container">
  <h4 class="mb-5"><span class="bg-light px-3 pb-1"><%= @customer.last_name%><%= @customer.first_name%>さんの会員情報編集</span></h4>
  <%= form_with model: @customer, url: admin_customer_path(@customer.id) do |f| %>
    <div class="row">
      <div class="mx-auto">
        <table>
          <tr>
            <td>会員ID</td>
            <td style="padding-bottom: 10px;"><%= @customer.id %></td>
            <td style="padding-bottom: 10px;"></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td style="padding-bottom: 10px;"><%= f.text_field :last_name %></td>
            <td style="padding-bottom: 10px;"><%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td style="padding-bottom: 10px;"><%= f.text_field :last_name_kana %></td>
            <td style="padding-bottom: 10px;"><%= f.text_field :first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td style="padding-bottom: 10px;"><%= f.text_field :postal_code %></td>
            <td style="padding-bottom: 10px;"></td>
          </tr>
          <tr>
            <td>住所</td>
            <td colspan="2" style="padding-bottom: 10px;"><%= f.text_field :address, :size=>"50" %></td>
            <td style="padding-bottom: 10px;" colspan="3"></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td style="padding-bottom: 10px;"><%= f.text_field :phone_number %></td>
            <td style="padding-bottom: 10px;"></td>
          </tr>
          <tr>
            <td style="padding-bottom: 10px;">メールアドレス</td>
            <td style="padding-bottom: 10px;"><%= f.text_field :email %></td>
            <td style="padding-bottom: 10px;"></td>
          </tr>
          <tr>
            <td style="padding-bottom: 10px; padding-right: 40px;">会員ステータス</td>
            <td style="padding-bottom: 10px;">
              <%= f.radio_button :status, true, checked: true %>
              有効
              <%= f.radio_button :status, false %>
              退会
            </td>
            <td style="padding-bottom: 10px;"></td>
          </tr>
          <tr>
            <td></td>
            <td style="padding-top: 20px;"><%= f.submit '変更を保存',class: 'btn btn-success' %></td>
            <td></td>
          </tr>
        </table>
      </div>
    </div>
  <% end %>
</div>